@model BTL_MONTHAYTHE.Models.Entity.Order
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
<div class="container single_product_container">
    <div class="row">
        <div class="col" style="height:60px">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="#">Trang chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Thanh toán</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-content">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Bạn đã đặt hàng thàng công</h2>
                <p class="text-center">Thông tin chi tiết về đơn hàng đã đặt được gửi về mail <a style="color:blue" href="https://www.gmail.com">@ViewBag.Email</a> của bạn</p>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets/js/single_custom.js"></script>
}

