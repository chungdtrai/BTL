@model BTL_MONTHAYTHE.Models.Entity.Order
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
<div class="container single_product_container">
    <div class="row">
        <div class="col" style="height:60px">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="#">Trang chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Thanh toán</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-content">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Thanh toán</h2>
                <p class="text-center">Kiểm tra thông tin đơn hàng</p>
            </div>
        </div>
        <div class="row" style="margin-top:15px">
            <div class="col-md-8">
                <h3>Thông tin khách hàng</h3>
                @using (Html.BeginForm("CheckOut", "ShoppingCart", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Code)
                    <div class="form-group">
                        <label>Họ tên khách hàng</label>
                        @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control", @style = "color:black" })
                        @Html.ValidationMessageFor(x => x.CustomerName, null, new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @style = "color:black" })
                        @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @style = "color:black" })
                        @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email"/>
                    </div>
                    <div class="form-group">
                        <lable style="margin-bottom:10px">Hình thức thanh toán</lable>
                        <select class="form-control" name="TypePayment" style="color:black; margin-top:10px">
                            <option value="1" style="color:black">Thanh toán sau khi nhận hàng</option>
                            <option value="2" style="color:black">Chuyển khoản</option>
                        </select>
                    </div>
                    <div class="form-group" style="margin-top:25px">
                        <button type="submit" class="btn btn-block btn-success">Đặt hàng</button>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <h3>Giỏ hàng</h3>
                <div style="border:1px solid black">
                    @Html.Action("Partial_Cart_Item", "ShoppingCart")
                </div>
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets/js/single_custom.js"></script>
}

